package test;

import java.util.ArrayList;
import java.util.Scanner;

public class Students extends Operations {
	
	@Override // For adding a student
	protected void add(ArrayList<String> array, String name, String type) {
		super.add(array, name, type);
	}

	@Override // For editing a student
	protected void edit(ArrayList<String> array, String name, int index, String type) {
		super.edit(array, name, index, type);
	}

	@Override // For deleting a student
	protected void delete(ArrayList<String> array, int index, String type) {
		super.delete(array, index, type);
	}
	
	// For Showing help for adding operation
	public void showAddingHelp(Students studentObj, ArrayList<String> studentsNames) {
		// Show user what student name want to edit
		System.out.println("Enter the index of student ?");
		Scanner scanStudentIndex =  new Scanner(System.in);
		int studentIndex = scanStudentIndex.nextInt();
		
		// Show user what student name want to edit
		System.out.println("Enter the name of student ?");
		Scanner scanStudentName =  new Scanner(System.in);
		String studentName = scanStudentName.nextLine();
		
		// edit student name to students names list
		studentObj.edit(studentsNames, studentName, studentIndex, "students");
	}
	
	// For Showing help for editing operation
	public void showEditingHelp() {
		
	}
	
}
