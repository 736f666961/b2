package test;
import java.util.ArrayList; // import the ArrayList class

/*
 * This class contains the main operations that can apply 
 * to employee and student and book class like
 * delete and add and edit
 * */
public class Person {
	
	// For Adding 
	protected void add(ArrayList<String> array, String name, String type) {
		array.add(name);
		System.out.println("You added a " + type + " with name " + name);
	}
	
	// For Editing 
	protected void edit(ArrayList<String> array, String name, int index, String type) {
		array.set(index, name);
		System.out.println("You edited a " + type + " with new name " + name);
	}
	
	// For Deleting 
	protected void delete(ArrayList<String> array, int index, String type) {
		array.remove(index);
		System.out.println("You deleted a " + type);
	}
	
	// For showing the data
	protected void show(ArrayList<String> array, String type) {
		System.out.println(type + " are: ");
		
		for (String arr : array) {
			System.out.println(arr);
		}
	}
}
