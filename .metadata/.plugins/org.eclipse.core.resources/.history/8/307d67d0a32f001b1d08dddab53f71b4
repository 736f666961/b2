package test;

import java.util.ArrayList;
import java.util.Scanner;

public class Employee extends Person{
	// Employee Attributes
	private int salary;

	// For getting salary
	public int getSalary() {
		return salary;
	}

	// For setting salary
	public void setSalary(int salary) {
		this.salary = salary;
	}
	
	// For adding a book
	public void add(ArrayList<Book> array) {
		// Create a new object
		Book obj = new Book();
		
		// Ask user to the id
		System.out.println("Enter the id of book ?");
		Scanner scanBookId = new Scanner(System.in);
		int bookId = scanBookId.nextInt();
		obj.setId(bookId);
		
		 // Ask user to enter title 
		System.out.println("Enter the title of book ?");
		Scanner scanBookTitle =  new Scanner(System.in);
		String bookTitle = scanBookTitle.nextLine();
		obj.setTitle(bookTitle);
		
		// Ask user to enter author
		System.out.println("Enter the author of book ?");
		Scanner scanBookAuthor =  new Scanner(System.in);
		String bookAuthor = scanBookAuthor.nextLine();
		obj.setAuthor(bookAuthor);	
		
		// Ask user to enter date
		System.out.println("Enter the date of book ?");
		Scanner scanBookDate =  new Scanner(System.in);
		String bookDate = scanBookDate.nextLine();
		obj.setDate(bookDate);	
		
		// Add to array as book object
		array.add(obj);
	}
	
	// For editing book
	public void edit(ArrayList<Book> array) {
		// Create a new object
		Book obj = new Book();

		// Ask user to enter index of student
		System.out.println("Enter the index of book ?");
		Scanner scanBookIndex = new Scanner(System.in);
		int studentIndex = scanBookIndex.nextInt();
		
		// Create a new object
		Book obj = new Book();
		
		// Ask user to the id
		System.out.println("Enter the id of book ?");
		Scanner scanBookId = new Scanner(System.in);
		int bookId = scanBookId.nextInt();
		obj.setId(bookId);
		
		 // Ask user to enter title 
		System.out.println("Enter the new title of book ?");
		Scanner scanBookTitle =  new Scanner(System.in);
		String bookTitle = scanBookTitle.nextLine();
		obj.setTitle(bookTitle);
		
		// Ask user to enter author
		System.out.println("Enter the new author of book ?");
		Scanner scanBookAuthor =  new Scanner(System.in);
		String bookAuthor = scanBookAuthor.nextLine();
		obj.setAuthor(bookAuthor);	
		
		// Ask user to enter date
		System.out.println("Enter the new date of book ?");
		Scanner scanBookDate =  new Scanner(System.in);
		String bookDate = scanBookDate.nextLine();
		obj.setDate(bookDate);	
		
		// Replace the old one with the new one
		array.set(studentIndex, obj);
	}
	
	// For deleting book
	public void delete(ArrayList<Student> array) {
		// Ask user to enter index of student
		System.out.println("Enter the index of book ?");
		Scanner scanBookIndex = new Scanner(System.in);
		int bookIndex = scanBookIndex.nextInt();
		
		// delete the item
		array.remove(bookIndex);
	}
	
	// For showing all student
	public void show(ArrayList<Book> array) {
		for (Book book : array) {
			System.out.println("Book Id: " + book.getId());
			System.out.println("Book Title: " + book.getTitle());
			System.out.println("Book Author: " + book.getAuthor());
			System.out.println("Book Date: " + book.getDate());
			System.out.println("");
		}
	}
}
