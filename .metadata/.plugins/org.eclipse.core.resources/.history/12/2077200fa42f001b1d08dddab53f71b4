package test;

import java.util.ArrayList;
import java.util.Scanner;

public class Employee extends Person{
	// Employee Attributes
	private int salary;

	// For getting salary
	public int getSalary() {
		return salary;
	}

	// For setting salary
	public void setSalary(int salary) {
		this.salary = salary;
	}
	
	// For adding a Employee
	public void add(ArrayList<Employee> array) {
		// Create a new object
		Employee obj = new Employee();
		
		// Ask user to enter firstname
		System.out.println("Enter the firstname of Employee ?");
		Scanner scanEmployeeFirstName = new Scanner(System.in);
		String EmployeeFirstName = scanEmployeeFirstName.nextLine();
		obj.setFirstName(EmployeeFirstName);
		
		 // Ask user to enter lastname
		System.out.println("Enter the lastname of Employee ?");
		Scanner scanEmployeeLastName =  new Scanner(System.in);
		String EmployeeLastName = scanEmployeeLastName.nextLine();
		obj.setLastName(EmployeeLastName);
		
		// Ask user to enter phone number
		System.out.println("Enter the phone number of Employee ?");
		Scanner scanEmployeePhoneNumber =  new Scanner(System.in);
		String EmployeePhoneNumber = scanEmployeePhoneNumber.nextLine();
		obj.setPhoneNumber(EmployeePhoneNumber);	
		
		// Ask user to enter card id
		System.out.println("Enter the card id of Employee ?");
		Scanner scanEmployeeCardId =  new Scanner(System.in);
		int EmployeeCardId = scanEmployeeCardId.nextInt();
		obj.setCardId(EmployeeCardId);	
		
		// Add to array as Employee object
		array.add(obj);
	}
	
	// For editing Employee
	public void edit(ArrayList<Employee> array) {
		// Create a new object
		Employee obj = new Employee();

		// Ask user to enter index of Employee
		System.out.println("Enter the index of Employee ?");
		Scanner scanStundetIndex = new Scanner(System.in);
		int EmployeeIndex = scanStundetIndex.nextInt();
		
		// Ask user to enter firstname
		System.out.println("Enter the new firstname of Employee ?");
		Scanner scanEmployeeFirstName = new Scanner(System.in);
		String EmployeeFirstName = scanEmployeeFirstName.nextLine();
		obj.setFirstName(EmployeeFirstName);
		
		 // Ask user to enter lastname
		System.out.println("Enter the new lastname of Employee ?");
		Scanner scanEmployeeLastName =  new Scanner(System.in);
		String EmployeeLastName = scanEmployeeLastName.nextLine();
		obj.setLastName(EmployeeLastName);
		
		// Ask user to enter phone number
		System.out.println("Enter the new phone number of Employee ?");
		Scanner scanEmployeePhoneNumber =  new Scanner(System.in);
		String EmployeePhoneNumber = scanEmployeePhoneNumber.nextLine();
		obj.setPhoneNumber(EmployeePhoneNumber);	
		
		// Ask user to enter card id
		System.out.println("Enter the new card id of Employee ?");
		Scanner scanEmployeeCardId =  new Scanner(System.in);
		int EmployeeCardId = scanEmployeeCardId.nextInt();
		obj.setCardId(EmployeeCardId);	
		
		// Replace the old one with the new one
		array.set(EmployeeIndex, obj);
	}
	
	// For deleting Employee
	public void delete(ArrayList<Employee> array) {
		// Ask user to enter index of Employee
		System.out.println("Enter the index of Employee ?");
		Scanner scanStundetIndex = new Scanner(System.in);
		int EmployeeIndex = scanStundetIndex.nextInt();
		
		// delete the item
		array.remove(EmployeeIndex);
	}
	
	// For showing all Employee
	public void show(ArrayList<Employee> array) {
		for (Employee employee : array) {
			System.out.println("Employee Firstname: " + employee.getFirstName());
			System.out.println("Employee Lastname: " + employee.getLastName());
			System.out.println("Employee Phone Number: " + employee.getPhoneNumber());
			System.out.println("Employee Salary: " + employee.getSalary());
			System.out.println("");
		}
	}
}
