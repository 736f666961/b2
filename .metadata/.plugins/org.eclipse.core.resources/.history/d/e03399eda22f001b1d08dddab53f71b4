package test;

import java.util.ArrayList;
import java.util.Scanner;

public class Book{
	// Book Attributes
	private int id;
	private String title;
	private String author;
	private String date;
	
	// For getting id
	public int getId() {
		return id;
	}
	
	// For setting id
	public void setId(int id) {
		this.id = id;
	}
	
	// For getting title
	public String getTitle() {
		return title;
	}
	
	// For setting title
	public void setTitle(String title) {
		this.title = title;
	}
	
	// For getting author
	public String getAuthor() {
		return author;
	}
	
	// For setting author
	public void setAuthor(String author) {
		this.author = author;
	}
	
	// For getting date
	public String getDate() {
		return date;
	}
	
	// For setting date
	public void setDate(String date) {
		this.date = date;
	}
	
	// For adding a book
	public void add(ArrayList<Student> array) {
		// Create a new object
		Book obj = new Book();
		
		// Ask user to the id
		System.out.println("Enter the id of book ?");
		Scanner scanStudentFirstName = new Scanner(System.in);
		String studentFirstName = scanStudentFirstName.nextLine();
		obj.setFirstName(studentFirstName);
		
		 // Ask user to enter lastname
		System.out.println("Enter the lastname of student ?");
		Scanner scanStudentLastName =  new Scanner(System.in);
		String studentLastName = scanStudentLastName.nextLine();
		obj.setLastName(studentLastName);
		
		// Ask user to enter phone number
		System.out.println("Enter the phone number of student ?");
		Scanner scanStudentPhoneNumber =  new Scanner(System.in);
		String studentPhoneNumber = scanStudentPhoneNumber.nextLine();
		obj.setPhoneNumber(studentPhoneNumber);	
		
		// Ask user to enter card id
		System.out.println("Enter the card id of student ?");
		Scanner scanStudentCardId =  new Scanner(System.in);
		int studentCardId = scanStudentCardId.nextInt();
		obj.setCardId(studentCardId);	
		
		// Add to array as student object
		array.add(obj);
	}
	
	// For editing student
	public void edit(ArrayList<Student> array) {
		// Create a new object
		Student obj = new Student();

		// Ask user to enter index of student
		System.out.println("Enter the index of student ?");
		Scanner scanStundetIndex = new Scanner(System.in);
		int studentIndex = scanStundetIndex.nextInt();
		
		// Ask user to enter firstname
		System.out.println("Enter the new firstname of student ?");
		Scanner scanStudentFirstName = new Scanner(System.in);
		String studentFirstName = scanStudentFirstName.nextLine();
		obj.setFirstName(studentFirstName);
		
		 // Ask user to enter lastname
		System.out.println("Enter the new lastname of student ?");
		Scanner scanStudentLastName =  new Scanner(System.in);
		String studentLastName = scanStudentLastName.nextLine();
		obj.setLastName(studentLastName);
		
		// Ask user to enter phone number
		System.out.println("Enter the new phone number of student ?");
		Scanner scanStudentPhoneNumber =  new Scanner(System.in);
		String studentPhoneNumber = scanStudentPhoneNumber.nextLine();
		obj.setPhoneNumber(studentPhoneNumber);	
		
		// Ask user to enter card id
		System.out.println("Enter the new card id of student ?");
		Scanner scanStudentCardId =  new Scanner(System.in);
		int studentCardId = scanStudentCardId.nextInt();
		obj.setCardId(studentCardId);	
		
		// Replace the old one with the new one
		array.set(studentIndex, obj);
	}
	
	// For deleting student
	public void delete(ArrayList<Student> array) {
		// Ask user to enter index of student
		System.out.println("Enter the index of student ?");
		Scanner scanStundetIndex = new Scanner(System.in);
		int studentIndex = scanStundetIndex.nextInt();
		
		// delete the item
		array.remove(studentIndex);
	}
	
	// For showing all student
	public void show(ArrayList<Student> array) {
		for (Student student : array) {
			System.out.println("Student Firstname: " + student.getFirstName());
			System.out.println("Student Lastname: " + student.getLastName());
			System.out.println("Student Phone Number: " + student.getPhoneNumber());
			System.out.println("Student Card Id: " + student.getCardId());
			System.out.println("");
		}
	}
}
