package t1;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		// Context
//		System.out.println("What's your name ?");
//		Scanner scanFirstName = new Scanner(System.in);
//		String firstName = scanFirstName.nextLine();
//		System.out.println("Hello, " + firstName);
//		scanFirstName.close();
//		loop1();
//		loop2();
		
		// Show priceWithTva
		System.out.println(priceWithTva(12, 1));
	}
	
	// TVA
	public static double priceWithTva(double priceHt, double tva){	 
		return ( 1 + tva / 100) * priceHt;
    }
	
	// Loops 1
	public static void loop1() {
		for (int i = 1; i <= 10; i++) {
			if (i == 10) {
				System.out.print(i);
			}else {
				System.out.print(i + ", ");
			}
		}
	}
	
	// Loops 2
	public static void loop2() {
		for (int i = 1, j = 100; i <= 10  && j > 0; i++, j--) {
			if(i < 10) {
				System.out.print(i + ", " + j + ", ");
			}else {
				System.out.print(i);
			}
		}
	}
	
	// methods
	public static void show(String firstName, String lastName, int age) {
		System.out.println("Hello, " + firstName + " " + lastName + ", you are  " + age + " years old");
	}
	
	
}
