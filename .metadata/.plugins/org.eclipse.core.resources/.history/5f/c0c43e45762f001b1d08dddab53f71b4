package test;

public class Book{
	// Book Attributes
	private int id;
	private String title;
	private String author;
	private String date;
	
	// For getting id
	public int getId() {
		return id;
	}
	
	// For setting id
	public void setId(int id) {
		this.id = id;
	}
	
	// For getting title
	public String getTitle() {
		return title;
	}
	
	// For setting title
	public void setTitle(String title) {
		this.title = title;
	}
	
	// For getting author
	public String getAuthor() {
		return author;
	}
	
	// For setting author
	public void setAuthor(String author) {
		this.author = author;
	}
	
	// For getting date
	public String getDate() {
		return date;
	}
	
	// For setting date
	public void setDate(String date) {
		this.date = date;
	}
	
	// Show book menu
