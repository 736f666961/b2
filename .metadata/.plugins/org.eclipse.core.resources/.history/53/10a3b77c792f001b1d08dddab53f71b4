package test;

import java.util.ArrayList;
import java.util.Scanner;

public class Student extends Person {
	// Student Attributes
	private int cardId;
	
	// For getting cardId
	public int getCardId() {
		return cardId;
	}

	// For setting cardId
	public void setCardId(int cardId) {
		this.cardId = cardId;
	}
	
//	@Override // For adding a student
	protected void add(ArrayList<Student> array, Student student) {
		// Ask user to enter firstname
		System.out.println("Enter the firstname of student ?");
		Scanner scanStudentName =  new Scanner(System.in);
		String studentName = scanStudentName.nextLine();
		
		// // Ask user to enter lastname
		System.out.println("Enter the lastname of student ?");
		Scanner scanStudentName =  new Scanner(System.in);
		String studentName = scanStudentName.nextLine();
		array.add(student);
		
		// Ask user to enter phone number
		System.out.println("Enter the phone number of student ?");
		Scanner scanStudentName =  new Scanner(System.in);
		String studentName = scanStudentName.nextLine();
		array.add(student);		
		
		// Ask user to enter card id
		System.out.println("Enter the card id of student ?");
		Scanner scanStudentName =  new Scanner(System.in);
		String studentName = scanStudentName.nextLine();
		array.add(student);
	}
}
