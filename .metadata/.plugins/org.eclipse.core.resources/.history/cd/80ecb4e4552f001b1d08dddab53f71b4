package test;

import java.util.ArrayList;
import java.util.Scanner;

public class Employee extends Person{
	// For Showing help for adding operation
	public void adding(Employee EmployeeObj, ArrayList<String> EmployeeNames) {
		// Show user what Employee name want to create
		System.out.println("Enter the name of Employee ?");
		Scanner scanEmployeeName =  new Scanner(System.in);
		String EmployeeName = scanEmployeeName.nextLine();
		
		// Add Employee name to Employee names list
		EmployeeObj.add(EmployeeNames, EmployeeName, "Employee");
	}
	
	// For Showing help for editing operation
	public void editing(Employee EmployeeObj, ArrayList<String> EmployeeNames) {
		// Show user what Employee name want to edit
		System.out.println("Enter the index of Employee ?");
		Scanner scanEmployeeIndex =  new Scanner(System.in);
		int EmployeeIndex = scanEmployeeIndex.nextInt();
		
		// Show user what Employee name want to edit
		System.out.println("Enter the name of Employee ?");
		Scanner scanEmployeeName =  new Scanner(System.in);
		String EmployeeName = scanEmployeeName.nextLine();
		
		// edit Employee name to Employee names list
		EmployeeObj.edit(EmployeeNames, EmployeeName, EmployeeIndex, "Employee");
	}
	
	// For Showing help for deleting operation
	public void deleting(Employee EmployeeObj, ArrayList<String> EmployeeNames) {
		// Show user what Employee name want to edit
		System.out.println("Enter the index of Employee ?");
		Scanner scanEmployeeIndex =  new Scanner(System.in);
		int EmployeeIndex = scanEmployeeIndex.nextInt();
		
		// delete Employee name to Employee names list
		EmployeeObj.delete(EmployeeNames, EmployeeIndex, "Employees");
	}
}
