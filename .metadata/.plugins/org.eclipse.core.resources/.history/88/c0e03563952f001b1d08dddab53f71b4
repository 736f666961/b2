package test;

import java.util.ArrayList;
import java.util.Scanner;

public class Student extends Person {
	// Student Attributes
	private int cardId;
	
	// For getting cardId
	public int getCardId() {
		return cardId;
	}

	// For setting cardId
	public void setCardId(int cardId) {
		this.cardId = cardId;
	}
	
	// For adding a student
	public void add(ArrayList<Student> array, Student student) {
		// Ask user to enter firstname
		System.out.println("Enter the firstname of student ?");
		Scanner scanStudentFirstName = new Scanner(System.in);
		String studentFirstName = scanStudentFirstName.nextLine();
		student.setFirstName(studentFirstName);
		
		 // Ask user to enter lastname
		System.out.println("Enter the lastname of student ?");
		Scanner scanStudentLastName =  new Scanner(System.in);
		String studentLastName = scanStudentLastName.nextLine();
		student.setLastName(studentLastName);
		
		// Ask user to enter phone number
		System.out.println("Enter the phone number of student ?");
		Scanner scanStudentPhoneNumber =  new Scanner(System.in);
		String studentPhoneNumber = scanStudentPhoneNumber.nextLine();
		student.setPhoneNumber(studentPhoneNumber);	
		
		// Ask user to enter card id
		System.out.println("Enter the card id of student ?");
		Scanner scanStudentCardId =  new Scanner(System.in);
		int studentCardId = scanStudentCardId.nextInt();
		student.setCardId(studentCardId);	
		
		// Add to array as student object
		array.add(student);
	}
	
	// For showing all student
	public void show(ArrayList<Student> array) {
		for (Student student : array) {
			System.out.println("Student Firstname: " + student.getFirstName());
			System.out.println("Student Lastname: " + student.getLastName());
			System.out.println("Student Phone Number: " + student.getPhoneNumber());
			System.out.println("Student Card Id: " + student.getCardId());
			System.out.println("");
		}
	}
}
